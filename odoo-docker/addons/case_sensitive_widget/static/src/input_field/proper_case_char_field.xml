<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="case_sensitive_widget.Proper_Case_CharField" owl="1">
        <t t-if="props.readonly">
            <span t-esc="formattedValue" />
        </t>
        <t t-else="">
            <input
                class="o_input"
                t-att-class="{'o_field_translate': isTranslatable}"
                t-att-id="props.id"
                t-att-type="props.isPassword ? 'password' : 'text'"
                t-att-autocomplete="props.autocomplete or (props.isPassword ? 'new-password' : 'off')"
                t-att-maxlength="maxLength > 0 and maxLength"
                t-att-placeholder="props.placeholder"
                t-ref="input"
                oninput="if (this.type !== 'password') {let words = this.value.split(' '); for (var i = 0; i &lt; words.length; i++) {words[i] = words[i].charAt(0).toUpperCase() + words[i].slice(1).toLowerCase();}this.value=words.join(' ');}"
            />
            <t t-if="isTranslatable">
                <TranslationButton
                    fieldName="props.name"
                    record="props.record"
                />
            </t>
        </t>
    </t>

</templates>
